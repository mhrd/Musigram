<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp">

    <android.mehrdad.musigram.ImageProcess.CircleImage
        android:id="@+id/lthumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/lperson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lthumbnail"
        android:layout_toRightOf="@+id/lthumbnail"
        android:textColor="@android:color/black"
        android:text="/@sadegian"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lperson"
        android:layout_toRightOf="@+id/lperson"
        android:text=" liked your post "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/lpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lperson"
        android:layout_toRightOf="@+id/lthumbnail"
        android:text="amad bahare janha" />

    <TextView
        android:id="@+id/ltime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lpost"
        android:layout_toRightOf="@+id/lthumbnail"
        android:text="5h" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/lthumbnail"
        android:layout_alignRight="@+id/lthumbnail"
        android:src="@drawable/likep" />
</RelativeLayout>