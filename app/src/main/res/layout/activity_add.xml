<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBg"
    tools:context="android.mehrdad.musigram.MainPages.Add_Page">

    <Button
        android:id="@+id/storageBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@drawable/storage" />

    <TextView
        android:id="@+id/selectst"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storageBtn"
        android:gravity="center"
        android:text="Select From Your Storage"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/timer"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectst"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="01:00"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recBtn"
        android:layout_below="@+id/timer"
        android:layout_margin="20dp"
        android:background="@drawable/spectrum_view" />

    <TextView
        android:id="@+id/select_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recBtn"
        android:layout_below="@+id/timer"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Record or Select 1 minute Voice to Share"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/recBtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"

        android:background="@drawable/rec" />

    <Button
        android:id="@+id/playBtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/play_button"
        android:visibility="gone" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:background="@drawable/next_page"
        android:visibility="gone" />

    <Button
        android:id="@+id/retryBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"
        android:background="@drawable/retry_button"
        android:visibility="gone" />

</RelativeLayout>
